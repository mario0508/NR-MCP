# NewRelic SSE Agent Environment Configuration
# Copy this file to .env and fill in your values

# Required: NewRelic API Key (User Key)
# Get this from: https://one.newrelic.com/admin-portal/api-keys-ui/keys
NEW_RELIC_API_KEY=your-newrelic-user-api-key-here

# Required: NewRelic Account ID  
# Find this in your NewRelic URL: https://one.newrelic.com/accounts/YOUR_ACCOUNT_ID
NEW_RELIC_ACCOUNT_ID=your-account-id-here

# Optional: Server Configuration
PORT=8000
ENVIRONMENT=production

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: Security Configuration (for production)
# ALLOWED_ORIGINS=https://yourdomain.com,https://anotherdomain.com
# API_RATE_LIMIT=100

# Optional: Caching Configuration (if using Redis profile)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=300

# Optional: Database Configuration (if adding persistence)
# DATABASE_URL=postgresql://user:pass@localhost/dbname

# Optional: Monitoring Configuration
# SENTRY_DSN=your-sentry-dsn-here
# PROMETHEUS_ENABLED=true